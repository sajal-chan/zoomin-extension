{
  "manifest_version": 3,
  "name": "Cursor Zoom Extension",
  "version": "1.0",
  "description": "Zoom at cursor position using key + right click",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["zoom.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}